<div class="container">
  <div class="row">
    <div class="col-12">
      <% flash.each do |key, message| %>
        <div class="text-center alert alert-<%= key == 'notice'? 'success': 'danger' %>">
          <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
          <%= message %>
        </div>
      <% end %>
      <%= yield %>
    </div>
  </div>
</div>